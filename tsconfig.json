{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@modules/*": ["./modules/*"],
      "@views/*": ["./views/*"],
      "@routes/*": ["./routes/*"],
      "@errors/*": ["./errors/*"],
      "@config/*": ["./config/*"]
    }
  },
  "exclude": [
    ".idea",
    "build",
    "node_modules",
    "typings/globals",
    "typings/modules",
    "coverage",
    "jest.config.js",
    "prettier.config.js",
    "dist",
    "babel.config.js"
  ]
}
